<%= turbo_frame_tag(dom_id(@post, :comments)) do %>

<p style="color: green"><%= notice %></p>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render partial: "posts/alt_comment", locals: { comment: comment } %>
  <% end %>
</div>

<%= link_to "New comment", new_comment_path %>

<% end %>
